{% extends 'base.html.twig' %}

{% block title %}{{ pageTitle }}{% endblock %}

{% block body %}

  <div class="wrapperIndex container">

    <div class="row">
      <div class="col">
        <h1>{{ pageTitle }}</h1>
      </div>
    </div>

    {% for program in programs %}

      <div class="card mt-2">
        <div class="card-title m-2">
          <h3>{{ loop.index }} / {{ program.title }}
            - Catégorie : {{ program.category.name }}</h3>
        </div>
        <div class="card-text m-2">
          <p>{{ program.summary }}</p>
          <a href="{{ path('wild_show', {'slug': program.title}) }}">En voir plus</a>
        </div>
      </div>

    {% else %}

      Aucune série trouvée

    {% endfor %}

    <div class="row text-center m-2">
      <div class="col-lg-12">
        <a href="{{ path('app_index') }}">Retour à l'accueil</a>
      </div>
    </div>

  </div>

{% endblock %}