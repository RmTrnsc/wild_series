{% extends 'base.html.twig' %}

{% block title %}{{ pageTitle }}{% endblock %}

{% block body %}

  <div class="wrapperIndex container">

    <div class="row">
      <div class="col">
        <h1>{{ pageTitle }}</h1>
      </div>
    </div>

    {% for program in programs %}

      <div class="card mt-2">
        <div class="card-title m-2">
          <h3>{{ program.title }}
            - Catégorie : {{ program.category.name }}</h3>
        </div>
        <div class="card-body d-flex align-items-center">
          <img class="card-img-top m-2" src="{{ program.poster }}" alt="{{ program.title }}"
               style="width: 12rem">
          <div class="card-text m-5">
            <p>{{ program.summary|u.truncate(100,'...') }}</p>
            <a href="{{ path('wild_show', {'slug': program.title}) }}">En voir plus</a>
          </div>
        </div>
      </div>

    {% else %}

      Aucune série trouvée

    {% endfor %}

    <div class="row text-center m-2">
      <div class="col-lg-12">
        <a href="{{ path('app_index') }}">Retour à l'accueil</a>
      </div>
    </div>

  </div>

{% endblock %}