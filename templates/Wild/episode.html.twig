{% extends 'base.html.twig' %}

{% block title %}{{ episode.title }}{% endblock %}

{% block body %}

  <div class="wrapperEpisode container">

    <a href="{{ path('show_program', {'programName': episode.season.program.title}) }}">
      <h1><u>{{ episode.season.program.title }}</u></h1>
    </a>
    <a href="{{ path('show_episodes', {'id': episode.season.id}) }}">
      <h2><u>Saison {{ episode.season.id }} - Année {{ episode.season.year }}</u></h2>
    </a>
    <h3>Episode {{ episode.number }}</h3>
    <div class="card mt-2">
      <div class="card-title m-2 d-flex align-items-baseline">
        <h3>{{ episode.title }}</h3>
      </div>
      <div class="card-body">
        <p class="card-text">{{ episode.synopsis }}</p>
      </div>
    </div>

    <div class="gallery mt-5" id="gallery">

      {% for key in picture %}

        <div class="mb-3 pics">
          <a data-fancybox="gallery" href="{{ key.picture }}">
            <img class="img-fluid" src="{{ key.picture }}"
                 alt="{{ episode.season.program.title }}-{{ episode.season.id }}">
          </a>
        </div>

      {% endfor %}

    </div>

    <div class="row text-center m-2">
      <div class="col-lg-12">
        <a href="{{ path('show_episodes', {'id': episode.season.id }) }}">Retour sur tous les épisodes</a>
      </div>
    </div>

  </div>
{% endblock %}