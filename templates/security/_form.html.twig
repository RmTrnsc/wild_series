<form method="post" action="{{ path('app_login') }}">

  <div class="input align-items-center">

    {% if error %}
      <div class="alert alert-danger">{{ error.messageKey | trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="col-lg-12 col-md-6 col-sm-6">
      <label for="username">Nom d'utilisateur</label>
      <input type="text" value="{{ last_username }}" name="_username" id="username"
             class="form-control" required
             autofocus>
    </div>

    <div class="col-lg-12 col-md-6 col-sm-6 mt-3">
      <label for="password">Mot de passe</label>
      <input type="password" name="_password" id="password" class="form-control"
             required>
    </div>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}">
  </div>
  <div class="button mt-3">
    <button class="btn btn-outline-info" type="submit">
      Se connecter
    </button>
  </div>

</form>
