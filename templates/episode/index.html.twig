{% extends 'base.html.twig' %}

{% block title %}Episode index{% endblock %}

{% block body %}

  <div class="wrapperEpisodeIndex container">

    <h1>Episode index</h1>

    <div class="row">
      <div class="col table-responsive">
        <table class="table table-light table-striped table-bordered table-hover">
          <thead class="thead-dark">
          <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Number</th>
            <th>Synopsis</th>
            <th>actions</th>
          </tr>
          </thead>
          <tbody>
          {% for episode in episodes %}
            <tr>
              <td>{{ episode.id }}</td>
              <td>{{ episode.title }}</td>
              <td>{{ episode.number }}</td>
              <td>{{ episode.synopsis }}</td>
              <td>
                <a href="{{ path('episode_show', {'id': episode.id}) }}">show</a>
                <a href="{{ path('episode_edit', {'id': episode.id}) }}">edit</a>
              </td>
            </tr>
          {% else %}
            <tr>
              <td colspan="5">no records found</td>
            </tr>
          {% endfor %}
          </tbody>
        </table>
      </div>
    </div>

    <div class="row text-center">
      <div class="col">
        <a href="{{ path('episode_new') }}">
          <button class="btn btn-outline-info">Create new</button>
        </a>
      </div>
    </div>

  </div>

{% endblock %}
