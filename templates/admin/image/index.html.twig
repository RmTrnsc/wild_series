{% extends 'base.html.twig' %}

{% block title 'Index des images' %}

{% block body %}

  <div class="wrapperImagesIndex container">

    <h1>Index des images</h1>

    <div class="row">
      <div class="col table-responsive">
        <table class="table table-light table-striped table-bordered table-hover">
          <thead class="thead-dark">
          <tr>
            <th>Id</th>
            <th>Images</th>
            <th>Épisode</th>
            <th>Actions</th>
          </tr>
          </thead>
          <tbody>

          {% for image in images %}
            <tr>
              <td>{{ image.id }}</td>
              <td>
                <a data-fancybox="gallery" href="{{ image.picture }}"><img src="{{ image.picture }}"
                                                                           alt="{{ image.episodePicture.title }}">
                </a>
              </td>
              <td>{{ image.episodePicture.title }}</td>
              <td class="d-flex justify-content-around">
                <a class="btn btn-outline-info" href="{{ path('image_edit', {'id': image.id}) }}"><i
                    class="far fa-edit"></i></a>
                {{ include('admin/image/_delete_form.html.twig') }}
              </td>
            </tr>

          {% else %}

            <tr>
              <td colspan="5">Aucune image trouvée</td>
            </tr>

          {% endfor %}

          </tbody>
        </table>
      </div>
    </div>

    <div class="row text-center">
      <div class="col">
        <a href="{{ path('image_new') }}">
          <button class="btn btn-outline-info">Ajouter une nouvelle image</button>
        </a>
      </div>
    </div>

  </div>

{% endblock %}
