{% extends 'base.html.twig' %}

{% block title "Index des saisons" %}

{% block body %}

  <div class="wrapperSeasonIndex container">

    <h1>Index des saisons</h1>

    <div class="row">
      <div class="col table-responsive">
        <table class="table table-light table-striped table-bordered table-hover">
          <thead class="thead-dark">
          <tr>
            <th>Id</th>
            <th>Série</th>
            <th>Année</th>
            <th>Numéro de la saison</th>
            <th>Description</th>
            <th>Actions</th>
          </tr>
          </thead>
          <tbody>
          {% for season in seasons %}
            <tr>
              <td>{{ season.id }}</td>
              <td>{{ season.program.slug | replace({'-' : ' '}) | title }}</td>
              <td>{{ season.year }}</td>
              <td>{{ season.number }}</td>
              <td>{{ season.description | u.truncate(300,'...') }}</td>
              <td class="d-flex justify-content-around">
                <a class="btn btn-outline-info" href="{{ path('season_edit', {'id': season.id}) }}"><i
                    class="far fa-edit"></i></a>
                {{ include('admin/season/_delete_form.html.twig') }}
              </td>
            </tr>
          {% else %}
            <tr>
              <td colspan="4">Aucune saison trouvée</td>
            </tr>
          {% endfor %}
          </tbody>
        </table>
      </div>
    </div>

    <div class="row text-center">
      <div class="col">
        <a href="{{ path('season_new') }}">
          <button class="btn btn-outline-info">Ajouter une nouvelle saison</button>
        </a>
      </div>
    </div>

  </div>

{% endblock %}
