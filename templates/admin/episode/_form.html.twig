{{ form_start(form) }}
<div class="container">
  <div class="row">
    <div class="col">
      {{ form_label(form.title, 'Titre') }}
      {{ form_widget(form.title) }}
    </div>
  </div>
  <div class="row">
    <div class="col">
      {{ form_label(form.number, 'Numéro de l\'épisode') }}
      {{ form_widget(form.number) }}
    </div>
  </div>
  <div class="row">
    <div class="col">
      {{ form_label(form.synopsis, 'Synopsis') }}
      {{ form_widget(form.synopsis) }}
    </div>
  </div>
  <div class="row">
    <div class="col">
      {{ form_label(form.season, 'Quelle année ?') }}
      {{ form_widget(form.season) }}
    </div>
  </div>
  <div class="row text-center mt-3">
    <div class="col">
      <button class="btn btn-outline-dark">{{ button_label|default('Enregistrer') }}</button>
    </div>
  </div>
</div>
{{ form_end(form) }}
