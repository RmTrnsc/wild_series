{% extends 'base.html.twig' %}

{% block title %}Program index{% endblock %}

{% block body %}

  <div class="wrapperProgramIndex container">

    <h1>Program index</h1>

    <div class="row">
      <div class="col table-responsive">
        <table class="table table-light table-striped table-bordered table-hover">
          <thead class="thead-dark">
          <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Summary</th>
            <th>Poster</th>
            <th>actions</th>
          </tr>
          </thead>
          <tbody>

          {% for program in programs %}

            <tr>
              <td>{{ program.id }}</td>
              <td>{{ program.title }}</td>
              <td>{{ program.summary }}</td>
              <td>{{ program.poster }}</td>
              <td>
                <a href="{{ path('program_show', {'id': program.id}) }}">show</a>
                <a href="{{ path('program_edit', {'id': program.id}) }}">edit</a>
              </td>
            </tr>

          {% else %}

            <tr>
              <td colspan="5">no records found</td>
            </tr>

          {% endfor %}

          </tbody>
        </table>
      </div>
    </div>

    <div class="row text-center">
      <div class="col">
        <a href="{{ path('program_new') }}">
          <button class="btn btn-outline-info">Create new</button>
        </a>
      </div>
    </div>

  </div>


{% endblock %}
