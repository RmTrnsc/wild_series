{% extends 'base.html.twig' %}

{% block title %}Program{% endblock %}

{% block body %}

  <div class="wrapperProgramShow container">

    <h1>Program</h1>

    <div class="row">
      <div class="col table-responsive">
        <table class="table table-light table-striped table-bordered table-hover">
          <tbody>
          <tr>
            <th>Id</th>
            <td>{{ program.id }}</td>
          </tr>
          <tr>
            <th>Title</th>
            <td>{{ program.title }}</td>
          </tr>
          <tr>
            <th>Summary</th>
            <td>{{ program.summary }}</td>
          </tr>
          <tr>
            <th>Poster</th>
            <td><img src="{{ program.poster }}" alt="{{ program.title }}"></td>
          </tr>
          <tr>
            <th>Acteur</th>
              <td>
                <ul>
                {% for actor in program.actors %}
                  <a href="{{ path('actorProgram',{'id':actor.id}) }}"><p>{{ actor.name }}</p></a>
                {% else %}
                  <p>Aucun acteur pour cette s√©rie</p>
                {% endfor %}
              </ul>
            </td>
          </tr>

          </tbody>
        </table>
      </div>
    </div>

    <div class="row text-center">
      <div class="col-lg-4">
        <a href="{{ path('program_index') }}">back to list</a>
      </div>
      <div class="col-lg-4">
        <a href="{{ path('program_edit', {'id': program.id}) }}">
          <button class="btn btn-outline-dark">edit</button>
        </a>
      </div>
      <div class="col-lg-4">
        {{ include('program/_delete_form.html.twig') }}
      </div>
    </div>

  </div>

{% endblock %}
